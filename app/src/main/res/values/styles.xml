<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button"></style>

    <style name="Button.Naked">
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text"></style>

    <style name="Text.SettingsPrompt">
        <item name="android:minWidth">180dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/textsize_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Layout"></style>

    <style name="Layout.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.Horizontal.PrefLine">
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

</resources>
